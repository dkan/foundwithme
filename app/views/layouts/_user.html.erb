<% if user_signed_in? %>
  <script type="text/javascript">
    var currentUser = <%= raw(current_user.to_json) %>;
    currentUser['skills'] = <%= raw(skills_for(current_user).to_json) %>;
    currentUser['employments'] = <%= raw(employments_for(current_user).to_json) %>;
    currentUser['educations'] = <%= raw(educations_for(current_user).to_json) %>;
  </script>
<% else %>
  <script type="text/javascript">
    var currentUser = null;
  </script>
<% end %>
