<div class="person clearfix">
  <div class="pull-right">
    <a class="btn btn-info pull-right show-user" data-id="<%= u.id %>" data-name="<%= u.first_name %>"><i class="icon-user icon-white" data-id="<%= u.id %>" data-name="<%= u.first_name %>"></i> Profile</a><br>
    <a class="btn btn-info pull-right contact-user" data-id="<%= u.id %>" data-name="<%= u.first_name %>"><i class="icon-envelope icon-white" data-id="<%= u.id %>" data-name="<%= u.first_name %>"></i> Message</a>
  </div>
  <div class="pull-left">
    <img src="http://placehold.it/64x64" alt="Person's Name" class="user-avatar">
  </div>
  <div class="pull-left">
    <p>
      <span class="user-full-name"><%= u.first_name %> <%= u.last_name %></span><br>
      <span class="user-location"><%= u.location %></span><br>
      <% if u.role && u.looking_for %>
        <span class="user-role"><%= u.role %></span> looking for <span class="user-role-want"><%= u.looking_for %></span><br>
      <% elsif u.role %>
        <span class="user-role"><%= u.role %></span>
      <% elsif u.looking_for%>
        Looking for <span class="user-role-want"><%= u.looking_for %></span><br>
      <% end %>
      <% if u.status %>
        <span class="user-current-status"><i class="status green"></i><%= u.status %></span>
      <% end %>
    </p>
  </div>
</div>