  <% end %> -->
  
  <%#= f.submit "Save", class: 'submit' %>
<% end %>

<div class="skills_template" style="display:none">
  <div class="skill"><%= text_field_tag "name[]" , '' %></div>
</div>
<%= form_tag update_skills_path, id: 'skills-form', remote: true do %>
  <% skills_for(current_user).each do |s| %>
  <div class ="skill">
    <%= hidden_field_tag "skills[]", s[:id] %>
    <%= s[:name] %>
    <a href="#" onclick="$(this).parent().remove();">x</a>
  </div>
  <% end %>
  <a href="#" onclick="$('#skills_form_submit').before($('.skills_template').html()); return false;">(+) Add More</a>
<% end %>

  <%= submit_tag "Save", class: 'submit', id: 'skills_form_submit',
     onclick: "$('.skills_form').submit(); $('user-edit-form').submit(); " %>
